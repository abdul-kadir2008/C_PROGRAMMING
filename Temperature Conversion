/*
 2. Temperature Conversion
 Write two functions: float toCelsius(float f); float toFahrenheit(float c);
 Example 1: 98.6°F ? 37.00°C
 Example 2: 0°C ? 32.00°F
 */
 
 #include<stdio.h>
   float toCelsius(float f)
 {
 	float Incelsius =(f-32)*5.0/9;
 	return Incelsius ;
 }
 float toFahrenheit(float c)
 {
 	float Infahenheit = (c*(9.0/5))+32 ;
 	return  Infahenheit; 
 }
 int main()
 {
 	float a;
 	int i;
 	printf("choce option");
 	printf("\nOptin 1: From Fahreneit to Celsius");
 	
 	printf("\nOptin 2: From Celsius to Fahreneit\n");
 	scanf("\n%d",&i);
 	//scanf("%d",&i);
 	if(i==1)
 	{
 		printf("\nEnter Fahreneit : ");
 		scanf("%f",&a);
 		float s=toCelsius(a);
 		printf("%.2f °C",s);
 		
	 }
 	else if(i==2)
 	{
 		printf("\nEnter Celsius:");
 		scanf("%f",&a);
 		float k=toFahrenheit(a);
 		printf("%.2f °F",k);
}
else 
printf("\ninvlied option:");
return 0;
 }
