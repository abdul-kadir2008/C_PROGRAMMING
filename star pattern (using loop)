//Take input from user and ask useer to chouse 0 for tringlur ster pattern and 1 for reverse tringular star pattern
// then print the pattern accordinglly
/*
*
**
***
****  > Tringular star pattern .

****
***
**
*     > reverse Tringlur star pattern.
*/
#include<stdio.h>
int main()
{
	int n;
	printf("chouse 0 for tringlur ster pattern and\n 1 for reverse tringular star pattern: ");
	scanf("%d",&n);
	if(n==0)
	{
		for(int i=1;i<=4;i++)
		{
			for(int j=1;j<=i;j++)
			{
				printf("*");
			}
            printf("\n")	;
		}

}
 else if(n==1)
 {
 	for(int i=1;i<=4;i++)
		{
			for(int j=4;j>=i;j--)
			{
				printf("*");
			}
            printf("\n")	;
		}
 }
 else 
 printf("invalied chouse:");
 
return 0;	
}
